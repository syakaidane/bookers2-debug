<% if @range == "User" %>
  <h2>Users search for "<%= params[:word] %>"</h2>
  <% if @users.exists? %>
    <table class="table table-hover table-inverse">
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>該当する検索結果は見つかりませんでした。</p>
  <% end %>
<% else %>
  <h2>Books search for "<%= params[:word] %>"</h2>
  <% if @books.exists? %>
    <table class="table table-hover table-inverse">
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>該当する検索結果は見つかりませんでした。</p>
  <% end %>
<% end %>

